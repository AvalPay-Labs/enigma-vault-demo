VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_ANON_PUBLIC_KEY

# Importante:
# - Nunca uses SERVICE_ROLE en el frontend. Es una clave secreta de servidor.
# - Para servidor/edge functions, coloca SERVICE_ROLE solo en variables de entorno del backend seguro.

# Mocking del frontend
# Coloca 'true' para forzar que los servicios del frontend devuelvan
# datos mockeados (sin hacer peticiones HTTP). Útil en Vercel estático
# o cuando el backend no está disponible. Cuando es 'true',
# VITE_DEPLOY_SERVICE_URL se ignora.
VITE_USE_MOCKS=false

# Backend real (opcional)
# Si VITE_USE_MOCKS=false y esto queda vacío, se usa el backend por defecto
# https://enigma-backend.aiforworld.xyz
# Ejemplo local: http://localhost:3000
VITE_DEPLOY_SERVICE_URL=

# Timeouts (ms)
# Timeout global HTTP (axios). Por defecto 120000 (120s)
VITE_HTTP_TIMEOUT_MS=120000
# Timeout específico para deploy-basics si deseas sobreescribir el global.
# Sugerido >= 60000 (60s) ya que el deploy de hardhat puede tardar >40s.
VITE_DEPLOY_BASICS_TIMEOUT_MS=120000
# Timeout específico para deploy del sistema completo
VITE_DEPLOY_SYSTEM_TIMEOUT_MS=180000
# Timeout específico para registro de usuario
VITE_REGISTER_USER_TIMEOUT_MS=60000
# Dirección de wallet para registrar (Paso 3)
VITE_CONVERTER_WALLET_ADDRESS=0x0000000000000000000000000000000
# Timeout específico para set-auditor (converter/standalone)
VITE_SET_AUDITOR_TIMEOUT_MS=60000
# Timeout específico para faucet (converter)
VITE_GET_FAUCET_TIMEOUT_MS=60000
# Timeout específico para depósito
VITE_DEPOSIT_TIMEOUT_MS=120000
# Timeout específico para retiro
VITE_WITHDRAW_TIMEOUT_MS=120000

# URL de documentación (Swagger/Redoc). Se usa en /docs -> Endpoints (embed)
# Por defecto: https://enigma-backend.aiforworld.xyz/docs
VITE_DOCS_URL=https://enigma-backend.aiforworld.xyz/docs

# API Versioning (frontend path handling)
# legacy -> usa /api/* tal cual
# versioned -> inserta /api/v1/* (o el valor de VITE_API_VERSION)
VITE_API_VERSION=v1
VITE_API_VERSION_MODE=legacy

# Timeouts de Auth/Info (ms)
VITE_LOGIN_TIMEOUT_MS=30000
VITE_PROFILE_TIMEOUT_MS=30000
VITE_HEALTH_TIMEOUT_MS=10000
VITE_INFO_TIMEOUT_MS=10000
